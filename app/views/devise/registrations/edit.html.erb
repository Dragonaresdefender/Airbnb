<div class="row">
  <div class="col-md-5 cold-md-offset-3 text_center">
      
  <h2>Modifier le profil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>)
    <%= device_error_messages! %>
  
    <div class="form_group">
      <%= f.text_field :fullname, autofocus: true, class: "form_control", placeholder: "Nom complet (prÃ©nom + nom)" %>
    </div>
  
    <div class="form_group">
      <%= f.email_field :email, autofocus: true, class: "form_control", placeholder: "Adresse e-mail" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form_control", placeholder: "Nouveau mot de passe ( Si vous souhaiter changer de mot de passe)" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form_control", placeholder: "Confirmation du mot de passe" %>
    </div>
  
    <div class="field">
      <br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form_control", placeholder: "Mot de passe actuel (pour confirmer tout changement)" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
  <% end %>

  </div>
</div>
    